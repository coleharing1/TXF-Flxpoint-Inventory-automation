# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# FLXPoint Credentials
FLXPOINT_EMAIL=your-email@company.com
FLXPOINT_PASSWORD=your-password

# Export Settings
EXPORT_WAIT_TIME=900000  # 15 minutes in milliseconds
RETRY_ATTEMPTS=3
EXPORT_RETENTION=30       # days to keep export files

# Debug Settings
DEBUG_MODE=false
VERBOSE=false
HEADLESS=true
SAVE_SCREENSHOTS=false

# Notification Settings
NOTIFICATION_EMAIL=admin@company.com
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
NOTIFICATION_METHOD=email  # email, webhook, or console

# Database Settings
DB_TIMEOUT=30000

# Session Settings
SESSION_SECRET=your-secret-key-here

# Schedule Settings
SCHEDULE_ENABLED=true

# Logging
LOG_LEVEL=info  # debug, info, warn, error
EOF < /dev/null